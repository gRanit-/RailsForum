
<%= form_for @topic, remote: true, html:{ class: "form-horizontal", style: "display:inline;" } do |f| %>
 <div class="modal-body">
    <ul class="errors"></ul>

<div class="control-group">
  <%= f.label :title,  class: "control-label" %><br />
    <div class="controls">
  <%= f.text_field :title ,class:"form-control"%>
    </div>
    </div>
 <div class="control-group">
  <%= f.label :text,  class: "control-label" %><br/>
  <div class="controls">
    <%= f.text_area :text,class:"form-control"%>

    </div>
    </div>
  </div>
   <div class="modal-footer">
  <%= f.submit class: "btn btn-primary" %>
  <%= link_to "Cancel", "#", data:{dismiss: "modal"},class: "btn btn-danger" %>
  </div>
<% end %>
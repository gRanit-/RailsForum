$("ul.errors").html("")
<% if @topic.errors.any? %>
  <% @topic.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#topic-index").html("<%= escape_javascript(render 'index') %>")
  $("#topic-modal").modal("hide")

<% end %>
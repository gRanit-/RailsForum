<div class="container">
  <div class="">
    <%= link_to "New Topic", new_topic_path, remote: true, class: "btn btn-primary" %>
  </div>
  <div class="new-topic"></div>
  
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th>Author</th>
        <th>Created at</th>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
    </thead>
    <tbody class="topic-index">
      <%= render "index" %>
    </tbody>
  </table>
</div>

<div id="topic-modal" class="modal fade">
  <div class="modal-dialog">
    <div id="inner-topic-modal" class="modal-content">
    </div>
  </div>
</div>
